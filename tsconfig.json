{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitUseStrict": true,
    "alwaysStrict": false,
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "buildOptions": {
    "force": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "Node"
    }
  }
}
