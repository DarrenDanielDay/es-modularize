{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2020", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "importHelpers": true,
    "rootDir": "./",
    "watch": true,
    "skipLibCheck": true
  },
}