{
  "name": "es-modularize",
  "version": "1.0.0",
  "description": "A browser only library for converting npm package to ES module.",
  "main": "dist/index.js",
  "scripts": {
    "start": "concurrently npm:start:*",
    "start:serve": "webpack serve",
    "start:watch": "esbuild ./src/index.ts --format=iife --platform=browser --watch --bundle --outfile=./dist/index.js --sourcemap --target=es2020",
    "start:demo": "esbuild ./src/demo/main.tsx --format=esm --outfile=./dist/main.js --watch --sourcemap --target=es2020",
    "build": "ts-esmbuilder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DarrenDanielDay/es-modularize.git"
  },
  "keywords": [
    "esmodule"
  ],
  "author": {
    "email": "Darren_Daniel_Day@hotmail.com",
    "name": "Darren Daniel Day",
    "url": "https://github.com/DarrenDanielDay"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DarrenDanielDay/es-modularize/issues"
  },
  "homepage": "https://github.com/DarrenDanielDay/es-modularize#readme",
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@types/path-browserify": "^1.0.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/semver": "^7.3.12",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.10",
    "prettier": "^2.7.1",
    "serve": "^14.0.1",
    "terser": "^5.15.1",
    "ts-esmbuilder": "^0.1.4",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "path-browserify": "^1.0.1",
    "semver": "^7.3.8"
  }
}
